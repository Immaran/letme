<Window x:Class="letme.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True"
        xmlns:classes="clr-namespace:letme.Classes"
        Title="{Binding Title}"
        MinWidth="1000" MinHeight="600" Width="1000" Height="600" Background="Black">

    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Closing">
            <prism:InvokeCommandAction Command="{Binding ClosingCommand}"/>
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <ContentControl prism:RegionManager.RegionName="{x:Static classes:Names.contentRegion}"/>
    </Grid>
</Window>
